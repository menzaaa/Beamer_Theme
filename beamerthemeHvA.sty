\mode<presentation>

% Requirement
\RequirePackage{tikz}
\RequirePackage{varwidth}

% Options
% Language of university logo
\DeclareOptionBeamer{logo}[ENG]{\def\beamer@themeHvA@logo{#1}}
\ExecuteOptionsBeamer{logo=NL}

% Main color of title page and highlights (such as block elements and footline).
\DeclareOptionBeamer{maincolor}{\def\beamer@themeHvA@maincolor{#1}}
\ExecuteOptionsBeamer{maincolor=hva-blauw}
\ProcessOptionsBeamer

% Settings
\useinnertheme[logo=\beamer@themeHvA@logo]{HvA}
\useoutertheme{HvA}
\usecolortheme[maincolor=\beamer@themeHvA@maincolor]{HvA}
\usefonttheme{HvA}

\setbeamertemplate{navigation symbols}{}

\mode<all>
